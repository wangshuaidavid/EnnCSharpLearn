<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="ElementTest.MainWindow"
        xmlns:cust="clr-namespace:ElementTest.Elements"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded_1">
    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top" Background="Black" SnapsToDevicePixels="True">
                <Button Name="showItemPanelButton" Content="Show"  Foreground="AliceBlue" Click="showItemPanelButton_Click"/>
                <Button Content="About" Foreground="AliceBlue"/>
            </ToolBar>
            <Canvas DockPanel.Dock="Bottom" Background="AliceBlue" Name="MainCanvas"/>
            <cust:SolidItem Width="100" Height="100">
            </cust:SolidItem>
        </DockPanel>
    </Grid>
</Window>
